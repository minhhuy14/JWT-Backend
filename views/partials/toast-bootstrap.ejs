<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="2000">
        <div class="toast-header">
            <strong class="me-auto">Bootstrap</strong>
            <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
        <div class="toast-body">
            Hello, world! This is a toast message.
        </div>
    </div>
</div>

<script>
    function showToast(title, message) {

        // Thay đổi title của toast
        $('.toast .me-auto').text(title);

        // Thay đổi message của toast
        $('.toast .toast-body').text(message);

        // Hiển thị toast
        $('.toast').toast('show');
    }

    function reloadPageOnToastHiden() {
        // Reload the page when the toast is hidden
        $('.toast').on('hidden.bs.toast', function () {
            location.reload();
        });
    }

</script>